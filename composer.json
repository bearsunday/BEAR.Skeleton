{
    "name": "bear/skeleton",
    "type": "project",
    "description": "Skeleton application for BEAR.Sunday",
    "license":"MIT",
    "require": {
        "php": ">=7.0.0",
        "roave/security-advisories": "dev-master",
        "bear/package": "^1.2.2",
        "josegonzalez/dotenv": "^2.1"
    },
    "require-dev": {
        "composer/composer": "^1.4",
        "bear/qatools": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Skeleton\\": "src/"
        }
    },
    "scripts" :{
        "pre-install-cmd": "BEAR\\Skeleton\\Installer::preInstall",
        "pre-update-cmd": "BEAR\\Skeleton\\Installer::preInstall",
        "post-create-project-cmd": "php --run \"touch('.env');\"",
        "test": [
            "phptest"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v",
            "phpcbf src"
        ],
        "clean": "rm -rf var/tmp/* var/log/* tests/tmp/*",
        "serve": "php -S 127.0.0.1:8080 -t public",
        "api": "php bootstrap/api",
        "web": "php bootstrap/web"
    }
}
