{
    "name": "bear/skeleton",
    "type": "project",
    "description": "Skeleton application for BEAR.Sunday",
    "license":"MIT",
    "require": {
        "php": ">=5.5.0",
        "bear/package": "~1.0",
        "josegonzalez/dotenv": "~2.0"
    },
    "require-dev": {
        "composer/composer": ">=1.0.0-alpha10",
        "phpunit/phpunit": "~4.8",
        "squizlabs/php_codesniffer": "~2.3",
        "phpmd/phpmd": "~2.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BEAR\\Skeleton\\": "src/"
        }
    },
    "scripts" :{
        "pre-install-cmd": [
            "BEAR\\Skeleton\\Installer::preInstall",
            "php --run \"touch('.env');\""
        ],
        "post-install-cmd": [
            "BEAR\\Skeleton\\Installer::postInstall",
            "./vendor/bin/composer dump-autoload"
        ],
        "test": [
            "php vendor/phpmd/phpmd/src/bin/phpmd src text ./phpmd.xml",
            "php vendor/squizlabs/php_codesniffer/scripts/phpcs",
            "php vendor/phpunit/phpunit/phpunit"
        ]
    }
}
