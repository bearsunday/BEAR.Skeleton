{
    "name": "bear/skeleton",
    "type": "project",
    "description": "Skeleton application for BEAR.Sunday",
    "license":"MIT",
    "require": {
        "php": ">=7.0.0",
        "roave/security-advisories": "dev-master",
        "bear/package": "^1.2.2",
        "josegonzalez/dotenv": "^2.1"
    },
    "require-dev": {
        "composer/composer": "^1.4",
        "bear/qatools": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Skeleton\\": "src/"
        }
    },
    "scripts" :{
        "pre-update-cmd": "BEAR\\Skeleton\\Composer::install",
        "post-create-project-cmd": [
            "composer dump-autoload",
            "php --run \"touch('.env');\""
        ],
        "test": ["phpunit"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/api"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"],
        "serve": "php -S 127.0.0.1:8080 -t public",
        "api": "php bootstrap/api.php",
        "web": "php bootstrap/web.php"
    }
}
